{
    "compilerOptions": {
        "target": "ES2020",
            "module": "ESNext",
                "moduleResolution": "node",
                    "outDir": "./public/js",
                        "rootDir": "./src/ts",
                            "strict": true,
                                "esModuleInterop": true,
                                    "skipLibCheck": true,
                                        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
        "exclude": [
            "node_modules"
        ]
}
